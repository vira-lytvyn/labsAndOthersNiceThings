        <Label Content="Вага:" Height="28" HorizontalAlignment="Left" Margin="18,19,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="79,21,12,0" Name="distanceTextBox" VerticalAlignment="Top" TabIndex="1" />
        <Button Content="Зберегти" Height="23" HorizontalAlignment="Right" Margin="0,50,94,0" Name="okBtn" VerticalAlignment="Top" Width="75" Click="okBtn_Click" TabIndex="2" IsDefault="True" />
